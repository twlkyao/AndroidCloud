<?xml version="1.0" encoding="utf-8"?>
<!-- Kuaipan disk view. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kuaipan_disk_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    android:weightSum="6" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:orientation="horizontal" >

        <!-- User info. -->

        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/layout_margin_right"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text" />
        <!-- Login/Logout button. -->

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/layout_margin_right"
            android:background="@drawable/btn_style_green"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text" />
    </LinearLayout>

    <!-- The remote file path. -->

    <LinearLayout
        android:id="@+id/remote_file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:orientation="horizontal" >

        <!-- Remote file path label. -->

        <TextView
            android:id="@+id/remote_disk_file_path_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remote_file_path"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />
        <!-- Remote file path. -->

        <TextView
            android:id="@+id/remote_disk_file_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/我的应用/AndroidCloud/"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
    <!-- Remote file info. -->

    <ListView
        android:id="@+id/remote_disk_files"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:layout_weight="5"
        android:background="@color/green"
        android:divider="@color/gray"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_right"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- OK Button. -->

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:layout_weight="1"
            android:background="@drawable/btn_style_green"
            android:text="@string/btn_ok"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />
        <!-- Cancel Button. -->
        <!--
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:layout_weight="1"
            android:background="@drawable/btn_style_white"
            android:text="@string/btn_cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />
        -->
    </LinearLayout>

</LinearLayout>